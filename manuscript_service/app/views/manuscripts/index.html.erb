<p id="notice"><%= notice %></p>
<div class="container">
お手本の求人情報が見つかる！
<h1>過去リクサーチ</h1>
<div class="col-5">
  <%= form_tag manuscripts_path, :method => 'get' do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class:"form-control" %>
      <div class="input-group-append">
        <%= submit_tag "検索する", :name => nil, class:'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<% @manuscripts.each do |manuscript|%>
<div style="padding:2%;">
  <div class="container box">
  <div style="border-bottom:1px solid lightgray;">
    <%= manuscript.company %>
  </div>
  <div style="font-size:18pt;font-weight:bold;"><%= manuscript.title.gsub(/(￥r￥n|￥r|￥n)/, "") %></div>
  <%= manuscript.job_content.gsub(/(￥r￥n|￥r|￥n)/, "") %><br>
  <div style="border-bottom:1px solid lightgray;">
    <span style="font-weight:bold;">備考</span> <%= manuscript.remarks.gsub(/(￥r￥n|￥r|￥n)/, "").truncate(50) %>
  </div>
  <%= link_to '詳細', manuscript%>
  </div>
</div>
<% end %>

